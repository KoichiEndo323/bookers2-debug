<div class="container">
  <div class="row">
    <div class='mx-auto col-12'>
      <h1>Results index</h1>
      <table class='table'>
        <!--検索対象がUserの時　-->
        <% if @range == "User" %>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
              <td><%= user.name %></td>
              <td>フォロー数:<%= user.followings.count %></td>
              <td>フォロワー数:<%= user.followers.count %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        <% else %>
        <!--検索対象がBookの時  -->
        <thead>
          <tr>
            <th>User image</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <%= link_to user_path(book.user) do %>
              <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
              <% end %>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>